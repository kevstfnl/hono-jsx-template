{
	"name": "@kevstfnl/hono-mono-template",
	"author": "Kevin Stefanelli",
	"description": "A template project for hono+jsx+bun",
	"private": true,
	"module": "src/index.ts",
	"type": "module",
	"packageManager": "^bun@1.2.20",
	"scripts": {
		"dev": "concurrently \"bun --watch ./src\" \"bun run build:css --watch\"",
		"check": "bunx biome check --write",
		"build": "bun build ./src --outdir ./build",
		"build:css": "bunx @tailwindcss/cli -i ./templates/assets/styles/index.css -o ./public/assets/styles/index.css",
		"build:minify": "concurrently \"build:css --minify\" \"bun run build --minify\"",
		"preview": "bun ./build"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.4",
		"@tailwindcss/cli": "^4.1.13",
		"@types/bun": "latest",
		"concurrently": "^9.2.1",
		"tailwindcss": "^4.1.13"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"hono": "^4.9.7"
	}
}
